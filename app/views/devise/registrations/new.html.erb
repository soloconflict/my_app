
<div class="row">
	<div class="col-sm-6 col-sm-offset-4">
		<% if params[:plan] == '2' %>
			<h1>Pro Account</h1>
		<% else %>
			<h1>Basic Account</h1>
		<% end %>
	</div>
	
	
	<div class="col-sm-4 col-sm-offset-4">
		<h2>Sign up</h2>

		<div class="well">
			<% if params[:plan] == '2' %>
				<%= render "pro_form" %>
			<% else %>
				<%= render "basic_form" %>
			<% end %>
			
			<%= render "devise/shared/links" %>
		</div>
	</div>
</div>
